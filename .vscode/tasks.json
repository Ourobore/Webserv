{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "clang build",
        "command": "clang++",
        "args": [
          "-g",
          "-fstandalone-debug",
          "-std=c++98",
          "-Wall",
          "-Wextra",
          "-Werror",
          "-Iinclude",
          "src/*.cpp"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }